<div class="container">
  <header>
   <h1><%= @group.name %></h1>
   <%= image_tag(@group.image.url(:thumb)) %>
  </header>
  <br>

  <div class="btn-group" role="group" aria-label="...">
    <%= link_to "Add Album", new_group_album_path(@group), class: "btn btn-primary" %>
  </div>
  <br><br>

  <div>
    <% @albums.each do |album| %>
      <div class="box panel panel-default">
        <%= link_to album.name, group_album_path(@group, album) %> <br>
        <%= link_to image_for(album), group_album_path(@group, album) %>
      </div>
      <br>
    <% end %>
  </div>
  <br><br>
  <div>
    <% if is_group_admin?(current_user, @group) %>
      <%= link_to "Delete Group", @group, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
    <% end %>
  </div>
</div>
