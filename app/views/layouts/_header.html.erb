<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Pix", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% unless current_user %>
          <li><%= link_to 'Sign In', signin_path %></li>
          <li><%= link_to 'Sign Up', signup_path %></li>
        <% else %>
          <li><%= link_to current_user.name, current_user %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to "Create Group", new_group_path %></li>
              <li><%= link_to "My Groups", groups_path %></li>
              <li class="divider"></li>
              <li><%= link_to 'Account Settings', edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to 'Sign Out', session_path, method: :delete %></li>
            </ul>
          </li> 
        <% end %>
      </ul>
    </nav>
  </div>
</header>