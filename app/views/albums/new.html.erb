<div class="container">
  <header>
    <h1>Create Album</h1>
  </header>

  <%= form_for [@group, @album] do |f| %>
    <div class="form-group">
      <%= render 'shared/errors', object: @album %>
    </div>
    <div class="form-group">
      <%= f.label :name %> <br>
      <%= f.text_field :name, autofocus: true, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit "Create Album", class: "btn btn-primary" %>
    </div>
  <% end %>
  <%= link_to "Cancel", root_path %>
</div>
