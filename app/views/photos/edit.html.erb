<header>
  <h1>Edit Photo</h1>
</header>

<%= image_tag(@photo.image.url(:large)) %> <br>

<%= form_for @photo do |f| %>
  <div class="form-group">
    <%= f.label :caption %> <br>
    <%= f.text_field :caption, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit 'Update', class: "btn btn-primary" %>
    <%= link_to 'Delete', @photo, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
  </div>

<% end %>
