<header>
  <h1>Edit Photo</h1>
</header>

<%= image_tag(@photo.image.url(:large)) %> <br>

<%= form_for @photo do |f| %>
  <p>
    <%= f.label :caption %> <br>
    <%= f.text_field :caption %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>

<% end %>
<%= link_to 'Delete', @photo, method: :delete, data: { confirm: 'Are you sure?' } %>